{
 "name": "modalcode",
 "displayName": "ModalCode",
 "description": "Adding user-defined modes to VsCode",
 "repository": {
  "type": "git",
  "url": "https://github.com/StefanoIncardone/ModalCode"
 },
 "version": "0.1.1",
 "engines": {
  "vscode": "^1.95.0"
 },
 "categories": [
  "Keymaps",
  "Other"
 ],
 "keywords": [
  "modes"
 ],
 "activationEvents": [
  "*"
 ],
 "main": "./out/extension.js",
 "contributes": {
  "configuration": [
   {
    "title": "Available modes",
    "properties": {
     "modalcode.modes": {
      "type": "array",
      "description": "List of avaialble modes",
      "items": {
       "type": "object",
       "description": "Mode properties",
       "required": ["name", "capturing"],
       "additionalProperties": false,
       "properties": {
        "name": {
         "type": "string",
         "description": "The name of the mode"
        },
        "icon": {
         "type": "string",
         "description": "The icon label to show next to the mode name"
        },
        "capturing": {
         "type": "boolean",
         "description": "Whether the mode should capture typing events",
         "default": false
        }
       }
      }
     }
    }
   }
  ],
  "commands": [
   {
    "title": "Select mode",
    "command": "modalcode.select_mode",
    "category": "ModalCode"
   }
  ]
 },
 "scripts": {
  "vscode:prepublish": "npm run compile",
  "compile": "tsc -p ./",
  "watch": "tsc -watch -p ./",
  "lint": "eslint"
 },
 "devDependencies": {
  "@eslint/js": "^9.14.0",
  "@types/node": "^22.9.0",
  "@types/vscode": "^1.95.0",
  "@typescript-eslint/eslint-plugin": "^8.13.0",
  "@typescript-eslint/parser": "^8.13.0",
  "@vscode/test-electron": "^2.4.1",
  "eslint": "^9.14.0",
  "globals": "^15.12.0",
  "typescript": "^5.6.3",
  "typescript-eslint": "^8.13.0"
 }
}
