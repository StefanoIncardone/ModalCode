{
 "name": "modalcode",
 "displayName": "ModalCode",
 "description": "Adding user-defined modes to VsCode",
 "repository": {
  "type": "git",
  "url": "https://github.com/StefanoIncardone/VimCode"
 },
 "version": "0.1.0",
 "engines": {
  "vscode": "^1.95.0"
 },
 "categories": [
  "Keymaps",
  "Other"
 ],
 "keywords": [
  "modes"
 ],
 "activationEvents": [
  "onStartupFinished"
 ],
 "main": "./out/extension.js",
 "contributes": {
  "configuration": [
   {
    "title": "Available modes",
    "properties": {
     "modalcode.modes": {
      "type": "array",
      "description": "List of avaialble modes"
     }
    }
   },
   {
    "title": "Starting mode",
    "properties": {
     "modalcode.starting_mode": {
      "type": "string",
      "description": "The starting mode"
     }
    }
   }
  ],
  "commands": [
   {
    "title": "Enter mode",
    "command": "modalcode.enter_mode",
    "category": "ModalCode"
   }
  ]
 },
 "scripts": {
  "vscode:prepublish": "npm run compile",
  "compile": "tsc -p ./",
  "watch": "tsc -watch -p ./",
  "lint": "eslint"
 },
 "devDependencies": {
  "@eslint/js": "^9.14.0",
  "@types/node": "^22.9.0",
  "@types/vscode": "^1.95.0",
  "@typescript-eslint/eslint-plugin": "^8.13.0",
  "@typescript-eslint/parser": "^8.13.0",
  "@vscode/test-electron": "^2.4.1",
  "eslint": "^9.14.0",
  "globals": "^15.12.0",
  "typescript": "^5.6.3",
  "typescript-eslint": "^8.13.0"
 }
}
