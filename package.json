{
 "license": "MIT",
 "author": {
  "name": "Stefano Incardone",
  "email": "stefanoincardone@gmail.com"
 },
 "name": "modalcode",
 "displayName": "ModalCode",
 "description": "Adding user-defined modes to VsCode",
 "repository": {
  "type": "git",
  "url": "https://github.com/StefanoIncardone/ModalCode"
 },
 "version": "0.1.2",
 "engines": {
  "node": "24.12.0",
  "vscode": "^1.106.0"
 },
 "categories": [
  "Keymaps",
  "Other"
 ],
 "keywords": [
  "modes"
 ],
 "activationEvents": [
  "*"
 ],
 "main": "./out/extension.js",
 "contributes": {
  "configuration": [
   {
    "title": "Available modes",
    "properties": {
     "modalcode.modes": {
      "type": "array",
      "uniqueItems": true,
      "description": "List of avaialble modes",
      "items": {
       "type": "object",
       "description": "Mode properties",
       "required": [
        "name",
        "capturing"
       ],
       "additionalProperties": false,
       "properties": {
        "name": {
         "type": "string",
         "description": "The name of the mode",
         "minLength": 1,
         "maxLength": 16
        },
        "capturing": {
         "type": "boolean",
         "description": "Whether the mode should capture typing events",
         "default": false
        }
       }
      }
     }
    }
   }
  ],
  "commands": [
   {
    "title": "Select mode",
    "command": "modalcode.select_mode",
    "category": "ModalCode"
   }
  ]
 },
 "scripts": {
  "tsc": "tsc",
  "compile": "tsc -p ./",
  "watch": "tsc -watch -p ./",
  "lint": "eslint"
 },
 "devDependencies": {
  "@types/vscode": "1.106.0",

  "eslint": "9.39.2",
  "@eslint/js": "9.39.2",
  "typescript-eslint": "8.51.0",
  "@typescript-eslint/eslint-plugin": "8.51.0",
  "@typescript-eslint/parser": "8.51.0",

  "globals": "17.0.0",
  "typescript": "5.9.3"
 }
}
